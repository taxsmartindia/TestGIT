<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_app_scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_background_color"
        android:orientation="vertical" >
		<TextView
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@drawable/background_pink"
            android:paddingBottom="@dimen/about_h1_paddingbottom"
            android:paddingLeft="@dimen/about_h1_paddingleft"
            android:paddingRight="@dimen/about_h1_paddingright"
            android:paddingTop="@dimen/about_h1_paddingtop"
            android:text="@string/title_aboutapp1"
            android:textColor="@color/text_headline"
            android:textSize="@dimen/about_h1"
            android:textStyle="bold" />
		<WebView
		    android:id="@+id/text_aboutApp1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/about_txt_paddingleft"
            android:paddingRight="@dimen/about_txt_paddingright"
            android:paddingTop="@dimen/about_txt_paddingtop"
            android:paddingBottom="@dimen/about_h1_paddingbottom"
            android:textColor="@color/black"
            android:textSize="@dimen/about_h2"/>
		<TextView
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@drawable/background_pink"
            android:paddingBottom="@dimen/about_h1_paddingbottom"
            android:paddingLeft="@dimen/about_h1_paddingleft"
            android:paddingRight="@dimen/about_h1_paddingright"
            android:paddingTop="@dimen/about_h1_paddingtop"
            android:text="@string/title_aboutapp2"
            android:textColor="@color/text_headline"
            android:textSize="@dimen/about_h1"
            android:textStyle="bold" />
		<WebView
		    android:id="@+id/text_aboutApp2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/about_txt_paddingleft"
            android:paddingRight="@dimen/about_txt_paddingright"
            android:paddingTop="@dimen/about_txt_paddingtop"
            android:paddingBottom="@dimen/about_h1_paddingbottom"
            android:textColor="@color/black"
            android:textSize="@dimen/about_h2"/>
        <ImageView 
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:src="@drawable/krunksoft_logo"/>
    </LinearLayout>

</ScrollView>