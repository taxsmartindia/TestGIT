<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="none"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_background_color"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/about_img_heigh"
            android:background="@drawable/belfast_thepackage" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@drawable/background_pink"
            android:paddingBottom="@dimen/about_h1_paddingbottom"
            android:paddingLeft="@dimen/about_h1_paddingleft"
            android:paddingRight="@dimen/about_h1_paddingright"
            android:paddingTop="@dimen/about_h1_paddingtop"
            android:text="@string/title_belfast_package"
            android:textColor="@color/text_headline"
            android:textSize="@dimen/about_h1"
            android:textStyle="bold" />
        
        
        <WebView
		    android:id="@+id/text_belfast_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/about_txt_paddingleft"
            android:paddingRight="@dimen/about_txt_paddingright"
            android:paddingTop="@dimen/about_txt_paddingtop"
            android:paddingBottom="@dimen/about_h1_paddingbottom"
            android:textColor="@color/black"
            android:textSize="@dimen/about_h2"/>
        
        
         
    </LinearLayout>

</ScrollView>